extends layout

block content
  .hero-auth.valign-wrapper
    .valign.centered
      form.card#signupForm
        .card-content
          .card-title.grey-text.center-align #{__('t.signup')}
          .row
            .input-field.col.s12
              input#email.validate(type='email' name='email' required)
              label(for='identifier') #{__('t.email')}
            .input-field.col.s12
              input#password.validate(type='password' name='password' required)
              label(for='password') #{__('t.password')}
            .input-field.col.s12
              input#password_confirmation.validate(type='password' required)
              label(for='password_confirmation') #{__('t.password_confirmation')}
            .input-field.col.s12
              input#agreeTerms(type='checkbox' required)
              label(for='agreeTerms')
                | #{__('t.agreeTerms')} 
                a.modal-trigger(href='#terms') #{__('t.terms1')}
          .row
            .input-field.col.s12
              input.disabled.btn-wide.btn.btn-flat.green.white-text.btn-large(type='submit' value="#{__('t.signup')}")
          .row
            .col.s6
              a(href='/signin') #{__('t.have_account')}
            .col.s6.right-align
              //- a(href='/forgot') #{__('auth.forgot_password')}

  #terms.modal
    .modal-content
      h4 #{__('t.terms0')}
      object(data='/terms.pdf', type='application/pdf', style="width: 100%; height: 500px;")
        iframe(src='/terms.pdf', width='100%', height='300', style='border: none;')
          | This browser does not support PDFs. Please download the PDF to view it: 
          a(href='/terms.pdf') Download PDF
